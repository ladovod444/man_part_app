{% set identifier = item.id %}

<div id="{{ identifier }}" class="col-2 p-1 ">

{#    {% set priority_bg = item.priority ? '#fff3cd' : '#fff' %}#}
    {% set priority_style = item.priority ? 'style=border-color:#bb2d3b;border-width:2px;' %}

    {# <tr class="vertical-middle" style="border-bottom: 5px solid {{ priority_border }};"> #}
    <div class="border-bottom border-4 rounded-4 bg-primary border-primary ">
        <div class="card bg-light-primary rounded-4" {{ priority_style }}>

            {% set image_path = '/assets/img/blank.svg' %}
            {% if item.product_image_ext is defined and item.product_image_ext is not null %}
                {% set image_path = cdn_image_path(item.product_image, item.product_image_ext, item.product_image_cdn, 'small') %}
            {% endif %}


            <div class="card-body small p-2">
                <div class="d-flex align-items-center small">
{#                    <div class="w-100 d-flex gap-3 align-items-center">#}
{#                        <div class="h5">#}
{#                            <input id="check-01978bde-7cd3-7c80-977c-18afa854da6d" type="checkbox"#}
{#                                               class="form-check-input add-all-to-production btn-outline-danger"#}
{#                                               data-formname="manufacture_selection_part_products_form"#}
{#                                               data-product="01978bde-7cc4-776d-bc28-4afb423c8df5"#}
{#                                               data-offer="01978bde-7cd2-7ded-ac2c-437ba1c39160"#}
{#                                               data-variation="01978bde-7cd2-7ded-ac2c-437ba1ee58c0"#}
{#                                               data-modification="01978bde-7cd3-7c80-977c-18afa854da6d" data-total="100"#}
{#                                               title="Выбрать данный товар"></div>#}
{#                        <label for="check-01978bde-7cd3-7c80-977c-18afa854da6d"></label>#}
{#                    </div>#}
{#                    <div class="text-muted flex-shrink-1"><span class="badge text-bg-secondary">Triangle</span></div>#}
                </div>
            </div>

            <div class="d-flex flex-column small gap-1 p-2 bg-cover lazy col-2 w-100"
                 style=" height: 200px;"
                 data-bg="{{ image_path }}"
            >
            </div>

            <div class="card-body d-flex flex-column p-2 small">
                {#        <a href="{{ path('manufacture-part:admin.products.index', { id: item.id }) }}" #}
                {#           class="fw-bolder mb-1 text-decoration-none product-name"> #}
                {#            {{ item.number }} #}
                {#        </a> &nbsp; #}

{#                {{ item.id }}#}

                    <span class="fw-bolder mb-1 text-dark text-decoration-none product-name">{{ item.product_name }}</span>


                <div class="text-muted fw-bolder">
                    {# Значение множественного варианта ТП #}
                    {{ item.product_variation_value|call_twig_func(item.product_variation_reference~'_render') ~
                    item.product_modification_value|call_twig_func(item.product_modification_reference~'_render') }}

                    {# Значение торгового предложения #}
                    {{ item.product_offer_value|call_twig_func(item.product_offer_reference~'_render') }}

                    {# Постфикс торгового предложения #}
                    {{ item.product_offer_postfix }}
                    {# Постфикс множественного варианта #}
                    {{ item.product_variation_postfix }}
                    {# Постфикс модификации #}
                    {{ item.product_modification_postfix }}

                </div>


                <div class="mb-1 mt-2">
                    <span class="opacity-50 fw-normal">Производство:</span> &nbsp;
                    <strong>{{ item.action_name }}</strong>
                </div>
                <div class="mb-1">
                    <span class="opacity-50 fw-normal">Ответственный:</span> &nbsp;
                    <strong> {{ item.users_profile_username }}</strong>
                </div>

                <div class="mb-1">
                    <span class="opacity-50 fw-normal">Количество:</span> &nbsp;
                    <strong> {{ item.product_total }}</strong>
                </div>
            </div>


        </div>
    </div>
</div>
